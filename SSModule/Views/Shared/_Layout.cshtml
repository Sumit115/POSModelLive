<body class="sidebar-mini sidebar-collapse @ViewData["bdClass"] ">
    <input type="hidden" id="hdFormId" value="@ViewBag.FormId" />
    <input type="hidden" id="hdGridName" value="@ViewBag.GridName" />
    <div class="wrapper">
