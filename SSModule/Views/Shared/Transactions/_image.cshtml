@model SSRepository.Models.TransactionModel

@{
    Layout = null;
}

<a href="javascript:void(0)" onclick="$('.model-image').modal('toggle');" class="nav-link" style="padding: 7px 0px 0px 7px;">
    <i class="far fa-image fa-fw" aria-hidden="true" style="font-size:30px;"></i>
</a>
<div class="modal fade model-image" style="z-index: 99999;">
    <div class="modal-dialog" role="document" style="width: 57% !important;max-width: 100%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Image Detail</h5>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="radio-class mr-3 d-flex align-items-center mt-3">
                                <input type="file" >
                                <label class="label" for="StatusActive">Image</label>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="$('.model-image').modal('toggle');">Ok</button>
            </div>
        </div>
    </div>
</div>