@model SSRepository.Models.TransactionModel

@{
    Layout = null;
}
<input type="hidden" id="hdProductList" value="@ViewBag.ProductList" />
<input type="hidden" id="hdInvoiceList" value="[]" />
<div class="col-md-12 mb-2 mt-2">
    <div class="form-group"> 
        <input type="text" id="txtSearchBarcode" class="form-control" placeholder="Barcode Search....">
    </div>

</div>
@if (Model.ExtProperties.TranAlias == "SINV" || Model.ExtProperties.TranAlias == "PINV" || Model.ExtProperties.TranAlias == "SCRN" || Model.ExtProperties.TranAlias == "SRTN")
{
    <div class="col-md-12 text-right">

        <div class="form-group">
            <a href="javascript:void(0)" class="btn btn-success mt-2" onclick="VoucherDetail()">Voucher</a>

            <a href="javascript:void(0)" class="btn btn-success mt-2" onclick="PaymentPopup()"><i class="fa-2x fa-money fa-money-bill-alt fas" aria-hidden="true"></i></a>
        </div>
    </div>
}
<div class="col-md-12 mb-2 mt-2">
    <div id="DDT" class="DDT">
    </div>
</div>


<div class="modal fade model-paymentdetail" style="z-index: 99999;">
    <div class="modal-dialog" role="document" style="width: 50% !important;max-width: 100%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Payment Detail</h5>
                @*   <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>*@
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="radio-class mr-3 d-flex align-items-center mt-3">
                                <input asp-for="Cash" class="radios__input mr-2 paymentDtl" type="checkbox" style="height: 25px;width: 25px;">
                                <label class="label" for="StatusActive">ON CASH</label>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>AMOUNT</label>
                                    <input type="text" asp-for="CashAmt" class="form-control  input-number paymentDtl" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="radio-class mr-3 d-flex align-items-center mt-3">
                                <input asp-for="Credit" class="radios__input  mr-2 paymentDtl" type="checkbox" style="height: 25px;width: 25px;">
                                <label class="label" for="StatusActive">ON CREDIT</label>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group mt-3">
                                    <input type="text" asp-for="CreditAmt" class="form-control input-number paymentDtl" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label> Posting A/c</label>
                                    <input type="text" asp-for="Account" class="form-control" value="@(Model.FKPostAccID>0?Model.PartyName:"")" readonly />
                                    <input type="text" asp-for="FKPostAccID" class="form-control paymentDtl" style="display:none" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>DUE DATE</label>
                                    <input type="date" asp-for="CreditDate" class="form-control paymentDtl" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="radio-class mr-3 d-flex align-items-center mt-3">
                                <input asp-for="Cheque" class="radios__input mr-2 paymentDtl" type="checkbox" style="height: 25px;width: 25px;">
                                <label class="label" for="StatusActive">CHEQUE/DD</label>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group mt-3">
                                    <input type="text" asp-for="ChequeAmt" class="form-control input-number paymentDtl" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>CHEQUE/DD NO</label>
                                    <input type="text" asp-for="ChequeNo" class="form-control paymentDtl" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Date</label>
                                    <input type="date" asp-for="ChequeDate" class="form-control paymentDtl" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Bank</label>
                                    <select asp-for="FKBankChequeID" asp-items="@(new SelectList(ViewBag.BankList,"PkBankId","BankName"))" class="form-control paymentDtl" id="FKBankChequeID">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <div class="radio-class mr-3 d-flex align-items-center mt-3">
                                <input asp-for="CreditCard" class="radios__input mr-2 paymentDtl" type="checkbox" style="height: 25px;width: 25px;">
                                <label class="label" for="StatusActive"> CARD</label>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group mt-3">
                                    <input type="text" asp-for="CreditCardAmt" class="form-control input-number paymentDtl" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label> CARD</label>
                                    <select asp-for="FKBankCreditCardID" asp-items="@(new SelectList(ViewBag.BankList,"PkBankId","BankName"))" class="form-control paymentDtl" id="FKBankCreditCardID">
                                        <option value="">Select</option>
                                    </select>

                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>EXPIRY DATE</label>
                                    <input type="date" asp-for="CreditCardDate" class="form-control paymentDtl" />
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>CARD NO.</label>
                                    <input type="text" asp-for="CreditCardNo" class="form-control  input-number  paymentDtl" />
                                </div>
                            </div>



                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="PaymentDetail()">Ok</button>
            </div>
        </div>
    </div>
</div>


<ul id="contextMenu" style="display:none;position:absolute">
    <li id="contextEditColumn" data="EditColumn">Edit Column</li>
</ul>