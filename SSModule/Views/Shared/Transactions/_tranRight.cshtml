@model SSRepository.Models.TransactionModel

@{
    Layout = null;
    bool flag = false;
}


<div class="right-header-bar">
    <button class="icon-button" type="button" id="btnAboutSupport" tooltip="About" flow="left" fdprocessedid="sv5v8o">
        <i class="bi bi-info-circle-fill"></i>
    </button>
    <partial name="~/Views/Shared/Transactions/_image.cshtml" />

    <partial name="~/Views/Shared/Transactions/_Remark.cshtml" />


    @if (Model.ExtProperties.PostInAc || flag == true)
    {
        <button class="icon-button" type="button" onclick="VoucherDetail()" tooltip="receipt" flow="left" fdprocessedid="sv5v8o">
            <i class="fas fa-receipt"></i>
        </button>
        <partial name="~/Views/Shared/Transactions/_PaymentInfo.cshtml" />
        <button class="icon-button" type="button" onclick="showpopupPrintOption()" tooltip="print barcode" flow="left" fdprocessedid="sv5v8o">
            <i class="fas fa-barcode"></i>
        </button>

    }
    @if (Model.ExtProperties.TranAlias == "SORD" || Model.ExtProperties.TranAlias == "LORD" || flag == true)
    {
        <a href="/excelfile/format/demo_csv_artical.csv" target="_blank" title="CSV Format Download" class="icon-button">
            <i class="bi bi-upload"></i>
        </a>
        <button class="icon-button" type="button" onclick="$('#ExcelFile').click()" tooltip="Upload CSV File" flow="left" fdprocessedid="sv5v8o">
            <i class="bi bi-download"></i>
        </button>

        <input type="file" name="ExcelFile" id="ExcelFile" onchange="UploadFile()" accept=".csv" class="file-input d-none">

    }
</div>