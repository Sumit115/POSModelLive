@model SSRepository.Models.TransactionModel
@{
    Layout = null;
}
<button id="btnRemark" class="icon-button" type="button" onclick="$('.model-Remark').modal('toggle');" data-bs-toggle="tooltip" data-bs-placement="left" title="Remark ( Shift + R )">
    <i class="bi bi-card-heading"></i>
</button>

<div class="modal fade model-Remark" style="z-index: 99999;">
    <div class="modal-dialog" role="document" style="width: 57% !important;max-width: 100%;">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Remark Detail</h5>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea asp-for="Remark" class="form-control trn" style="height: 150px;"></textarea>
                            <span asp-validation-for="Remark" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="$('.model-Remark').modal('toggle');" data-bs-toggle="tooltip" data-bs-placement="down" title="Ok ( Shift + O )">Ok</button>
            </div>
        </div>
    </div>
</div>