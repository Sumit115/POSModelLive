@{
    Layout = null;
    int IsCheckDone = ViewBag.IsCheckDone != null ? ViewBag.IsCheckDone : 0;
}

<!DOCTYPE html>

<html>
<head>


    <title></title>
</head>
<body class="main-bg">


    <a id="btnAccess" asp-controller="Validate" asp-action="index" style="display: none;">Access ERP</a>

    <script src="~/js/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            console.log(@IsCheckDone);
            if (@IsCheckDone== 1) {
                setCookie("checkIdentity", "abc@123#$", 365); 
                window.location.href = "/Dashboard";
            }
            else {
                window.location.href = $("#btnAccess").attr("href") + "?Id=0";
            } 
        })

        function setCookie(name, value, days) {
            var expires = "";
            if (days) {
                var date = new Date();
                date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
                expires = "; expires=" + date.toUTCString();
            }
            document.cookie = name + "=" + (value || "") + expires + "; path=/";
        }
       
       

    </script>

</body>
</html>

