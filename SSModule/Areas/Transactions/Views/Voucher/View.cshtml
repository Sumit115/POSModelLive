@model SSRepository.Models.TransactionModel
@{
    ViewData["Title"] = ViewBag.PageTitle;
}

<style>
    .form-group {
        margin-bottom: 0.2rem !important;
    }
</style>


<div class="p-3">
    <form id="TranForm" class="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PkId" />
    <input type="hidden" id="hdData" value="@ViewBag.Data" />
    <input type="hidden" id="hdControllerName" value="Voucher" />
    <input asp-for="ExtProperties.TranAlias" type="hidden" />
    <div class="col-md-12">
        <div class="row">

            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Series </label>
                            <input type="text" asp-for="SeriesName" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">*Invoice No</label>
                            <input type="text" asp-for="EntryNo" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Entry Date</label>
                            <input type="Date" asp-for="EntryDate" class="form-control" readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Ref.No </label>
                            <input asp-for="GRNo" class="form-control trn" readonly />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Ref. Date</label>
                            <input type="Date" asp-for="GRDate" class="form-control" readonly />
                        </div>
                    </div>


                </div>
            </div>



        </div>
    </div>
    <partial name="~/Views/Shared/Voucher/_tranGrid.cshtml" />
    <partial name="~/Views/Shared/Voucher/_tranFooter.cshtml" />
    </form>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/transaction/Voucher.js?id=@ViewBag.fileverson"></script>

}