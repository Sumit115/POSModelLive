@model SSRepository.Models.SysDefaults

@{
    ViewData["Title"] = "Profile";
    ViewData["bdClass"] = "page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-3">
    <form asp-action="Create" class="form-horizontal g-3" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <!-- Post -->
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Name</label>
                <div class="col-md-3">
                    <input asp-for="CompanyName" class="form-control" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Contact Person</label>
                <div class="col-md-3">
                    <input asp-for="CompanyContactPerson" class="form-control" />
                    <span asp-validation-for="CompanyContactPerson" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mobile</label>
                <div class="col-md-3">
                    <input asp-for="CompanyMobile" class="form-control input-number" pattern="Mobile" maxlength="10" />
                    <span asp-validation-for="CompanyMobile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email</label>

                <div class="col-md-3">
                    <input asp-for="CompanyEmail" class="form-control" pattern="Email" />
                    <span asp-validation-for="CompanyEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Address</label>
                <div class="col-md-8">
                    <input asp-for="CompanyAddress" class="form-control" />
                    <span asp-validation-for="CompanyAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row" style="display:none">
                <label class="col-sm-2 col-form-label">Country</label>
                <div class="col-md-4">
                    <input asp-for="CompanyCountry" class="form-control" value="India" />
                    <span asp-validation-for="CompanyCountry" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">State</label>

                <div class="col-md-3">
                    <select asp-for="CompanyState" asp-items="@(new SelectList(ViewBag.StateList,"Value","Text"))" class="form-control" onchange="BindCity()">
                    </select>
                    <span asp-validation-for="CompanyState" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">City</label>
                <div class="col-md-3">
                    <select asp-for="CompanyCityId" class="form-control">
                        <option value="">-Select-</option>
                    </select>
                    <span asp-validation-for="CompanyCityId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Pin</label>
                <div class="col-md-3">
                    <input asp-for="CompanyPin" class="form-control  input-number" maxlength="6" pattern="PinCode" />
                    <span asp-validation-for="CompanyPin" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Image</label>
                <div class="col-md-3">
                    <input type="file" class="form-control" asp-for="MyCompanyImage1" />
                    <input type="hidden" asp-for="CompanyImage1" />
                    <img src="@Model.CompanyImage1" style="height: 100px;width: 100px;" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Coding scheme </label>
                <div class="col-md-3">
                    <select asp-for="CodingScheme" class="form-control">
                        <option value="Unique">Unique</option>
                        <option value="fixed">fixed</option>
                        <option value="Lot">Lot</option>
                    </select>
                    <span asp-validation-for="CodingScheme" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Hold Location</label>
                <div class="col-md-3">
                    <select asp-for="FkHoldLocationId" asp-items="@(new SelectList(ViewBag.LocationList,"PkLocationID","Location"))" class="form-control">
                        <option value="">-Select-</option>
                    </select>
                    <span asp-validation-for="FkHoldLocationId" class="text-danger"></span>
                </div>
            </div>
            <!-- /.post -->

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Height</label>
                <div class="col-md-3">
                    <input asp-for="BarcodePrint_Height" class="form-control" />
                    <span asp-validation-for="BarcodePrint_Height" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">width</label>

                <div class="col-md-3">
                    <input asp-for="BarcodePrint_width" class="form-control" />
                    <span asp-validation-for="BarcodePrint_width" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Margin Top</label>
                <div class="col-md-3">
                    <input asp-for="BarcodePrint_MarginTop" class="form-control" />
                    <span asp-validation-for="BarcodePrint_MarginTop" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Margin Bottom</label>
                <div class="col-md-3">
                    <input asp-for="BarcodePrint_MarginBottom" class="form-control" />
                    <span asp-validation-for="BarcodePrint_MarginBottom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Margin Left</label>
                <div class="col-md-3">
                    <input asp-for="BarcodePrint_MarginLeft" class="form-control" />
                    <span asp-validation-for="BarcodePrint_MarginLeft" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Margin Right</label>
                <div class="col-md-3">
                    <input asp-for="BarcodePrint_MarginRight" class="form-control" />
                    <span asp-validation-for="BarcodePrint_MarginRight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Barcode Height</label>
                <div class="col-md-3">
                    <input asp-for="BarcodePrint_BarcodeHeight" class="form-control" />
                    <span asp-validation-for="BarcodePrint_BarcodeHeight" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Column In Per Row</label>
                <div class="col-md-3"><input asp-for="BarcodePrint_ColumnInPerRow" class="form-control" /><span asp-validation-for="BarcodePrint_ColumnInPerRow" class="text-danger"></span></div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Margin BetWeen Row Column</label>
                <div class="col-md-3"><input asp-for="BarcodePrint_MarginBetWeenRowColumn" class="form-control" /><span asp-validation-for="BarcodePrint_MarginBetWeenRowColumn" class="text-danger"></span></div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Font Size</label>
                <div class="col-md-3">
                    <input asp-for="BarcodePrint_FontSize" class="form-control" />
                    <span asp-validation-for="BarcodePrint_FontSize" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Financial Year</label>
            <div class="col-md-3">
                <select asp-for="FinYear" class="form-control">
                    <option value="2024">2024-25</option> 
                </select>
                <span asp-validation-for="FinYear" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

