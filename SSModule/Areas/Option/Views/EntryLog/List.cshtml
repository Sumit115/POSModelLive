            RPTOption.Controller = Controller = 'EntryLog';

            var dt = new Date(@dt.Year, @dt.Month-1, @dt.Day+1);
            document.getElementById("FromDate").valueAsDate = dt;
            document.getElementById("ToDate").valueAsDate = dt;
