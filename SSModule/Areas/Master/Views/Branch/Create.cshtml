@model SSRepository.Models.BranchModel

@{
    ViewData["Title"] = "Create";
    ViewData["bdClass"] = "page";
}

<div class="master-page-ui">
    <form asp-action="Create" class="g-3" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PKID" />

        <div class="row">
            <div class="col-md-8">
                <div class="form-group row">
                    <label class="col-sm-2">Branch Name<span class="required">*</span> </label>
                    <div class="col-md-6">
                        <input asp-for="BranchName" class="form-control" />
                        <span asp-validation-for="BranchName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Branch Code  </label>
                    <div class="col-md-6">
                        <input asp-for="BranchCode" class="form-control" />
                        <span asp-validation-for="BranchCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Contact Person</label>
                    <div class="col-md-6">
                        <input asp-for="ContactPerson" class="form-control" />
                        <span asp-validation-for="ContactPerson" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Mobile</label>
                    <div class="col-md-6">
                        <input asp-for="Mobile" class="form-control input-number" pattern="Mobile" maxlength="10" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Email</label>
                    <div class="col-md-6">
                        <input asp-for="Email" class="form-control" pattern="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2"></label>
                    <div class="col-md-6">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Branch Location</label>
                    <div class="col-md-6">
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Address</label>
                    <div class="col-md-6">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row" style="display:none">
                    <label class="col-sm-2">Country</label>
                    <div class="col-md-6">
                        <input asp-for="Country" class="form-control" value="India" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">State</label>
                    <div class="col-md-6">
                        <select asp-for="State" asp-items="@(new SelectList(ViewBag.StateList,"Value","Text"))" class="form-select" required>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">City</label>
                    <div class="col-md-6">
                        @Html.Partial("_DropDown", new ViewDataDictionary(this.ViewData) { { "ID", "FkCityId" },{"name",""}, { "Class", "val-cus-drp" }, { "event", "" },
                        { "value", Model.FkCityId }, { "text", Model.City}, { "uri", "City" }, { "required", "required" },{ "placeholder", "Select City"}
                        ,{ "parentid", "State" }, { "ExtraParam", "" }})
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Pin</label>
                    <div class="col-md-6">
                        <input asp-for="Pin" class="form-control  input-number" maxlength="6" pattern="PinCode" />
                        <span asp-validation-for="Pin" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2">Image</label>
                    <div class="col-md-6">
                        <input type="file" class="form-control" asp-for="MyImage1" />
                        <input type="hidden" asp-for="Image1" />
                        <img src="@Model.Image1" style="height: 100px;width: 100px;" />
                    </div>
                </div>

            </div>





        </div>

    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            Common.InputFormat();
            //BindCity(@Model.FkCityId);
            $('#btnServerSave').click(function (e) {
                e.preventDefault();
                $("form").submit();
            });
        })
        UploadImage = (id) => {
            var file = document.querySelector('input[id="file_' + id + '"]').files[0];
            // $("#FileName").val(file.name);
            var reader = new FileReader();
            reader.readAsDataURL(file);
            reader.onload = function () {
                //console.log(reader.result);
                $("#" + id).val(reader.result);
                $("#dummyimage_" + id).attr("src", reader.result);
                $("#dummyimage_" + id).show();
                //   $("#myImage").hide();

            };
        }
    </script>
 
}